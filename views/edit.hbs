<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="form-courses">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Title course</label>
        <span class="helper-text" data-error="enter a title"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price course</label>
        <span class="helper-text" data-error="enter a price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="url" type="text" class="validate" required value="{{course.url}}" >
        <label for="img">URL pictures</label>
        <span class="helper-text" data-error="enter a pictures" ></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">

    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
    <button type="submit" class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id"  value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Delete course</button>
</form>